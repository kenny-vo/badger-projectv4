<!DOCTYPE html>
<html lang="en" ng-app="identifly">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base href="/">

  <!-- bootstrap css -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <!-- font awesome -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <!-- angular growl css -->
  <link  rel="stylesheet" type="text/css" href="/styles/angular-growl.min.css" rel="stylesheet">

  <!-- custom styles -->
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

  <title>B2B.City</title>
</head>
<body ng-controller="MainController as main">
  <div growl> </div>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand grow" href="/">B2B.City</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="grow"><a ui-sref="about">About</a></li>
          <li class="grow" ng-show="!main.currentUser()"><a ui-sref="signup"><i class="fa fa-address-card-o" aria-hidden="true"></i> Sign Up</a></li>
          <li class="grow" ng-show="!main.currentUser()"><a ui-sref="login"> <i class="fa fa-sign-in" aria-hidden="true"></i>  Log In</a></li>
          <li class="grow" ng-show="main.currentUser()"><a ui-sref="create-listing">Create Listing</a></li>

          <li class="dropdown">
            <a class="grow" ng-show="main.currentUser()" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello, \{{main.currentUser().displayName}} <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="grow" ng-show="main.currentUser()"><a ui-sref="profile"><i class="fa fa-user" aria-hidden="true"></i> Profile</a></li>
              <li class="grow" ng-show="main.currentUser()"><a ui-sref="profile-listings"> <i class="fa fa-list" aria-hidden="true"></i> Your Listings</a></li>
              <li class="grow" ng-show="main.currentUser()"><a ui-sref="logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div>
    <ui-view>
  </div>

  <!-- jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

  <!-- bootstrap js -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <!-- angular -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.js"></script>

  <!-- angular messages -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-messages.min.js"></script>

  <!-- ui router -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.min.js"></script>

  <!-- satellizer -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/satellizer/0.13.4/satellizer.min.js"></script>

  <!-- angular animate -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular-animate.min.js"></script>

  <!-- angular growl -->
  <script type="text/javascript" src="scripts/angular-growl.min.js"></script>

  <!-- custom script (angular app) -->
  <script type="text/javascript" src="scripts/app.js"></script>


</body>
</html>
